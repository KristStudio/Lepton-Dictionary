    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lepton_Dictionary.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    xmlns:viewmodels="using:Lepton_Dictionary.ViewModels"
    xmlns:personalization="using:Lepton_Dictionary.Views.Personalization"
    RequestedTheme="{x:Bind ViewModel.Theme,Mode=OneWay}"
    Loaded="Page_Loaded"
    mc:Ignorable="d"
    SizeChanged="{x:Bind ViewModel.Page_SizeChanged}">
    <Page.Resources>
        <Style x:Key="SettingListViewItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="MinWidth" Value="{StaticResource SplitViewCompactPaneThemeLength}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="UseSystemFocusVisuals" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter ContentTransitions="{TemplateBinding ContentTransitions}"
                        Control.IsTemplateFocusTarget="True"
                        SelectionCheckMarkVisualEnabled="False"
                        PointerOverBackground="{ThemeResource SystemControlHighlightListLowBrush}"
                        PointerOverForeground="{ThemeResource ListViewItemForegroundPointerOver}"
                        SelectedBackground="{ThemeResource ThemeColorLevel0}"
                        SelectedForeground="{ThemeResource ContrastColorLevel0}"
                        SelectedPointerOverBackground="{ThemeResource SystemControlHighlightListLowBrush}"
                        PressedBackground="{ThemeResource SystemControlHighlightListMediumBrush}"
                        SelectedPressedBackground="{ThemeResource SystemControlHighlightListMediumBrush}"
                        DisabledOpacity="{ThemeResource ListViewItemDisabledThemeOpacity}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                        ContentMargin="{TemplateBinding Padding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Name="Open" x:FieldModifier="public">
            <DoubleAnimation Storyboard.TargetName="SettingPageLayer"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SettingPageLayer"
                             Storyboard.TargetProperty="ShadowOpacity"
                             From="0" To="0.35"
                             EnableDependentAnimation="True"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SettingPageContentGrid"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SettingPageLayerTranslateTransform"
                                         Storyboard.TargetProperty="Y"
                             From="150" To="0"
                                         Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseOut"></CircleEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="BackgroundLayer"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <!--<ColorAnimation Storyboard.TargetName="BackgroundLayer"
                            Storyboard.TargetProperty="Background"
                            From="{StaticResource Transparent}" To="{StaticResource ColorOne}"
                            Duration="0:0:0.4">
                <ColorAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseIn"></CircleEase>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>-->
        </Storyboard>
        <Storyboard x:Name="Close" x:FieldModifier="public" Completed="Close_Completed">
            <DoubleAnimation Storyboard.TargetName="SettingPageLayer"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SettingPageLayer"
                             Storyboard.TargetProperty="ShadowOpacity"
                             From="0.35" To="0"
                             EnableDependentAnimation="True"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SettingPageContentGrid"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="SettingPageLayerTranslateTransform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="150"
                             Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseOut"></CircleEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="BackgroundLayer"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.4">
            </DoubleAnimation>
            <!--<ColorAnimation Storyboard.TargetName="BackgroundLayer"
                            Storyboard.TargetProperty="Background"
                            From="{StaticResource ColorOne}" To="{StaticResource Transparent}"
                            Duration="0:0:0.4">
                <ColorAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseOut"></CircleEase>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>-->
        </Storyboard>
        <viewmodels:AcrylicOpacityToSliderConverter x:Key="AcrylicOpacityToSliderConverter"></viewmodels:AcrylicOpacityToSliderConverter>
    </Page.Resources>
