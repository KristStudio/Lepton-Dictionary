                                    </PivotHeaderItem>
                                </PivotItem.Header>
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,10" Background="{ThemeResource ThemeBackgroundColorLevel2}" Padding="10 6"
