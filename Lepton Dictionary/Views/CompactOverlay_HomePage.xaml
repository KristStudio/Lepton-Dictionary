                                    </Pivot.HeaderTemplate>
                                    <Pivot.ItemTemplate>
                                        <DataTemplate x:DataType="dictionarypage1:DictionaryModel">
                                            <Grid>
                                                <StackPanel Padding="0,20,0,0">
                                                    <local:CompactOverlay_DefinitionControl ViewModel="{x:Bind ViewModel,Mode=OneWay}">
                                                    </local:CompactOverlay_DefinitionControl>
                                                </StackPanel>
                                                <Grid Visibility="{x:Bind ViewModel.IsLoadingVisibility,Mode=OneWay}" Margin="0,20,0,0" Background="{ThemeResource ThemeBackgroundColorLevel0}">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top"
                                                    Margin="0,40,0,0">
                                                        <ProgressRing IsActive="True"
                                                          Foreground="{ThemeResource ContrastColorLevel3}"
                                                          Margin="0,0,10,0"></ProgressRing>
                                                        <TextBlock Text="正在加载词典数据"></TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Visibility="{x:Bind ViewModel.FailedVisibility,Mode=OneWay}" Margin="0,20,0,0" Background="{ThemeResource ThemeBackgroundColorLevel0}">
                                                    <TextBlock Text="{x:Bind ViewModel.NoticeText,Mode=OneWay}"></TextBlock>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </Pivot.ItemTemplate>
                                </Pivot>
                            </StackPanel>
                        </Grid>
                    </AppBarElementContainer>
                </muxcontrols:CommandBarFlyout.SecondaryCommands>
            </muxcontrols:CommandBarFlyout>
        </Grid.Resources>
        <AutoSuggestBox x:Name="AutoSuggestBox" x:FieldModifier="public"
                        Style="{StaticResource DictionaryAutoSuggestBoxStyle}"
                        ItemsSource="{x:Bind ViewModel.WordSuggestionCollection,Mode=OneWay}"
                        PlaceholderText="{x:Bind ViewModel.PlaceHolderText,Mode=OneWay}"
                        Background="{ThemeResource ThemeBackgroundColorLevel0_4}"
                        GotFocus="{x:Bind ViewModel.CompactOverlay_GetFocus}"
                        KeyUp="{x:Bind ViewModel.CompactOverlayTextBox_KeyUp}"
                        TextMemberPath="Word"
                        UpdateTextOnSelect="True"
                        HorizontalContentAlignment="Stretch"
                        FontSize="20"
                        VerticalContentAlignment="Stretch"
                        Margin="0,15,0,0"
                        Padding="15,0,0,1"
                        QuerySubmitted="{x:Bind ViewModel.CompactOverlayAutoSuggestBox_AutoSuggestBox_QuerySubmitted}"
                        SuggestionChosen="{x:Bind ViewModel.CompactOverlayAutoSuggestBox_SuggestionChosen}">
            <!--Background="{ThemeResource ThemeBackgroundColorLevel0_4}"-->
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate x:DataType="dictionarypage:WordSuggestionViewModel">
                    <Grid Margin="-11,0,-11,0" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="44"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0"
                                          CornerRadius="2" HorizontalAlignment="Center"
                                          BorderBrush="{ThemeResource ContrastColorLevel4}">
                            <TextBlock Text="汉英" VerticalAlignment="Center"
                                                   Foreground="{ThemeResource ContrastColorLevel6}"
                                                       HorizontalAlignment="Center"></TextBlock>
                        </Grid>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                   Text="{x:Bind Word,Mode=OneWay}"
                                                   TextWrapping="NoWrap" FontWeight="Bold"></TextBlock>
                        <TextBlock Grid.Column="2" Text="{x:Bind POS,Mode=OneWay}" TextWrapping="Wrap"
                                               FontStyle="Italic" VerticalAlignment="Center"
                                               Margin="0,0,0,0"></TextBlock>
                        <TextBlock Grid.Column="3" VerticalAlignment="Center"
                                                   Text="{x:Bind Translation,Mode=OneWay}"
                                                   Foreground="{ThemeResource ContrastColorLevel4}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="5,0,10,0"></TextBlock>
                    </Grid>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>
        <MediaElement x:Name="PronunciationPlayer" Volume="100"></MediaElement>
        <Grid Background="Transparent" Height="32" VerticalAlignment="Top">
            <Rectangle Fill="{ThemeResource AppBarBackgroundColor}"></Rectangle>
            <TextBlock x:Name="TextBlock_AppTileBar"
                       x:Uid="LeptonDictionary"
                       Text="悬浮查词框" Foreground="White"
                       HorizontalAlignment="Center" Margin="0,5,0,0"></TextBlock>
            <Rectangle Fill="Transparent" x:Name="TitleBar"
                       >
            </Rectangle>
            <Grid Height="30" Width="30" Margin="10,0,0,0" VerticalAlignment="Center"
                  HorizontalAlignment="Left" Background="Transparent"
                  Tapped="{x:Bind ViewModel.SwitchBack,Mode=OneWay}">
                <!--Margin="10,0,0,0"-->
                <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="12" Glyph="&#xE76B;"
                          VerticalAlignment="Center" HorizontalAlignment="Center"
                          Foreground="White"/>
                <!--E700-->
            </Grid>
            <!-- #FF7719AA -->

            <!--Margin="50,6,0,0"-->
        </Grid>
        <StackPanel x:Name="NotificationArea"
                    VerticalAlignment="Bottom" Margin="0,0,0,-10">
        </StackPanel>


    </Grid>
</Page>
